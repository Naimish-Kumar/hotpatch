# HotPatch OTA — Backend Environment Variables
# Copy this file to .env and fill in your values.

# ── Server ──
PORT=8080
ENVIRONMENT=development

# ── PostgreSQL ──
DATABASE_URL=postgres://hotpatch:hotpatch_dev@localhost:5432/hotpatch?sslmode=disable

# ── JWT Authentication ──
# Must be at least 32 characters. Change this in production!
JWT_SECRET=hotpatch-dev-secret-key-change-in-production-min32chars
JWT_EXPIRATION_HOURS=72

# ── S3 / Cloudflare R2 ──
S3_BUCKET=hotpatch-bundles
S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
S3_REGION=auto
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# ── Redis (optional) ──
REDIS_URL=redis://localhost:6379
